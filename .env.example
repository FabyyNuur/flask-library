# Variables d'environnement pour la production Vercel
# Copiez ce fichier en .env pour le développement local

# Clé secrète de l'application (utilisez une clé forte en production)
SECRET_KEY=votre_cle_secrete_super_forte_ici

# URL de la base de données (remplacez par votre vraie DB en production)
# Pour PostgreSQL: postgresql://user:password@host:5432/database
# Pour MySQL: mysql://user:password@host:3306/database
# Pour SQLite (développement seulement): sqlite:///bookstore.sqlite
DATABASE_URL=sqlite:///bookstore.sqlite

# Configuration Flask
FLASK_ENV=production
DEBUG=False

# Autres variables spécifiques à votre application
APP_NAME=Nuur-Library
USE_SESSION_FOR_NEXT=True
